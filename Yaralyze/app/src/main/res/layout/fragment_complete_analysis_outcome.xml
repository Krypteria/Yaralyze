<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    tools:context=".ui.analysis.outcomes.CompleteAnalysisOutcome">

    <include
        layout="@layout/app_header"
        android:id="@+id/appHeader">
    </include>

    <include
        layout="@layout/hashes"
        android:id="@+id/hashes">
    </include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:background="@color/purple_500"
        android:textSize="18dp"
        android:text="RESULTADO DEL ANALISIS" />

    <TextView
        android:id="@+id/completeMalwareDetectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="10dp"
        android:textColor="#646464"
        android:textSize="15dp"
        android:text="Malware detectado"/>

    <include
        layout="@layout/static_outcome"
        android:id="@+id/staticOutcome">
    </include>

    <include
        layout="@layout/hash_outcome"
        android:id="@+id/hashesOutcome">
    </include>

</LinearLayout>
</ScrollView>